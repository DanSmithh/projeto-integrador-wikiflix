    </div>
  </div>

  <!-- REVIEWS -->
  <div class="review-title">
    <h1 class=".heading-about">Avaliações</h1>
  </div>

    <% reviews.forEach(review => { %>
      <div class="review">
        <div class="row">
          <!-- <div class="col-md-1">
              <div class="profile-image-container review-image" style="background-image: url('../../public/images/user.png')"></div>
            </div> -->
          <div class="col-md-8 author-details-container">
            <h4 class="author-name">
              <a href="#"><%= review.usuario.nome + " " + review.usuario.sobrenome %> </a>
            </h4>
          </div>
          <p class="comment-title">Comentou:</p>
          <p><%= review.review %> </p>
        </div>

          <% if(review.usuario_id === usuario.id){ %>
            <form action="/movies/deletar/<%= idMovie %>">
            <button class="deleteReview">Excluir meu review</button>
            </form>
            <% } %> 

      </div>
      <% }) %> 




