<body>
  <!--------------HEADER------------------------>
  <header class="header" id="header">
    <!-- NAV -->
    <nav class="nav bd-container">
      <a href="#" class="logo"><img src="/images/logo-header.png" width="140px" alt="" /></a>

        <div class="nav__menu" id="nav-menu">
          <ul class="nav__list">
            <li class="nav__item"><a href="/catalog" class="nav__link">Inicío</a></li>
            <li class="nav__item"><input type="text" placeholder="Pesquise Aqui" /></li>
            <li class="nav__item"><a href="/users/editar/<%= usuario.id_hash %>" class="btn">Perfil</a></li>
            <li class="nav__item"><a href="/users/logout" class="btn-exit">Sair</a></li>
          </ul>
        </div>

      <!--MENU TOGGLE-->
      <div class="nav__toggle">
        <i class="bx bx-menu" style="color: #e8a330" id="nav-toggle"></i>
      </div>
      <!-- END MENU TOGGLE -->
    </nav>
    <!-- END NAV -->
  </header>
  <!-- MOVIE INFO     -->

  <div class="movie-info">
    <div class="movie-detail">
      <h1 class="movie-name"></h1>
      <p class="genres"></p>
      <p class="des"></p>

      <p class="starring"><span>Starring : </span></p>

    </div>
  </div>

  <!-- Trailers -->

  <div class="trailer-container">
    <h1 class=".heading-about">Trailers</h1>
    <!-- <iframe src="" title="YouTube video player" frameborder="0" 
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope;
       picture-in-picture" allowfullscreen></iframe> -->
  </div>

  <!-- Recommendations -->
  <div class="recommendations">
    <h1 class=".heading-about">Titulos Semelhantes</h1>
    <div class="recommendations-container">
      <!-- <div class="movie">
          <img src="img/poster.jpg" alt="">
          <p class="movie-title">nome filme</p>
        </div> -->
    </div>
  </div>

  <!-- REVIEWS -->
  <div class="review-title">
    <h1 class=".heading-about">Avaliações</h1>
  </div>

    <% reviews.forEach(review => { %>
      <div class="review">
        <div class="row">
          <!-- <div class="col-md-1">
              <div class="profile-image-container review-image" style="background-image: url('../../public/images/user.png')"></div>
            </div> -->
          <div class="col-md-8 author-details-container">
            <h4 class="author-name">
              <a href="#"><%= review.usuario.nome %> </a>
            </h4>
          </div>
          <p class="comment-title">Comentário:</p>
          <p><%= review.review %> </p>
        </div>
      </div>

      <% }) %> 

      <!-- <div class="row"> -->
      <!-- <div class="col-md-1">
          <div class="profile-image-container review-image" style="background-image: url('../../public/images/user.png')"></div>
        </div> -->
      <!-- <div class="col-md-8 author-details-container">
        <h4 class="author-name">
          <a href="#"> Daniel Oliveira </a>
        </h4>
      </div>
      <p class="comment-title">Comentário:</p>
      <p>Este é o comentário do usuário</p>
    </div>
    </div> -->




  <!-- FORM-REVIEW -->
  <div class="reviews" id="review-form-container">
    <h3 class=".heading-about">Compartilhe o que achou</h3>
    <p class="page-description">Preencha o formulário com a sua avaliação sobre o filme</p>
    <form action="/movies/<%= idMovie %> " id="review-form" method="POST">
      <input type="hidden" name="type" value="create">
      <input type="hidden" name="movies_id" value="<?= $movie->id ?>">
      <div class="form-group">
      </div>
      <div class="form-group">
        <label for="review">Sua avaliação:</label>
        <textarea name="reviews" id="reviews" rows="3" class="form-control" placeholder="O que você achou do filme?" required></textarea>
      </div>
      <button type="submit" class="card-btn">Enviar Review</button>
    </form>
  </div>




  </main>
  <%- include('./partials/footer') %>

    <script src="/javascripts/api.js"></script>
    <script src="/javascripts/about.js"></script>
    <!-- JavaScript Bundle with Popper -->
