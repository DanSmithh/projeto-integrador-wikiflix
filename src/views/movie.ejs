  <!-- FORM-REVIEW -->
  <div class="reviews" id="review-form-container">
    <h3 class=".heading-about">Compartilhe o que achou</h3>
    <p class="page-description">Preencha o formulário com a sua avaliação sobre o filme</p>
    <form action="/movies/<%= idMovie %>" id="review-form" method="POST">
      <input type="hidden" name="type" value="create">
      <input type="hidden" name="movies_id" value="<?= $movie->id ?>">
      <div class="form-group">
      </div>
      <div class="form-group">
        <label for="review">Sua avaliação:</label>
        <textarea name="reviews" id="reviews" rows="3" class="form-control" placeholder="O que você achou do filme?" required></textarea>
      </div>
      <button type="submit" class="card-btn">Enviar Review</button>
    </form>
  </div>




